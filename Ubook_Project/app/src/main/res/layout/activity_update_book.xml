<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateBook">


    <EditText
        android:id="@+id/idEdtBookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:hint="Book Name"
        android:background="#FFFFFF"
        android:importantForAutofill="no"
        android:inputType="text" />


    <EditText
        android:id="@+id/idEdtBookAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:hint="Author Name"
        android:background="#FFFFFF"
        android:importantForAutofill="no"
        android:inputType="text" />


    <EditText
        android:id="@+id/idEdtBookISBN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:hint="Book ISBN"
        android:background="#FFFFFF"
        android:importantForAutofill="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/idEdtBookPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:hint="Book Price in dollars"
        android:background="#FFFFFF"
        android:importantForAutofill="no"
        android:inputType="number" />

    <EditText
        android:id="@+id/idEdtBookYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:hint="Book Year"
        android:background="#FFFFFF"
        android:importantForAutofill="no"
        android:inputType="number" />


    <Button
        android:id="@+id/idBtnUpdateBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Update Book Details"
        android:textAllCaps="false"
        app:backgroundTint="#FA9696" />

    <Button
        android:id="@+id/idBtnDeleteBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Delete Book"
        android:textAllCaps="false"
        app:backgroundTint="#FA9696" />

</LinearLayout>